{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/gulp",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSources": true,
    "stripInternal": false,

    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  }
}
